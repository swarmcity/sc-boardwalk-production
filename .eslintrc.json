{
    "extends": ["eslint:recommended", "google"],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "brace-style": "off",
        "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
        "no-var": "off",
        "require-jsdoc": "off",
        "linebreak-style": ["error", "windows"]
    },
    "globals": {
        "Polymer": true
    }
}
